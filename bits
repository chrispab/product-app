<div class="row">

	<?php
		if ($errors) {
			echo '<ul class="errors">';
			foreach ($errors as $field => $error) {
				echo '<li>' . htmlentities($error) . '</li>';
			}
			echo '</ul>';
		}
	?>
</div>

vendor/phpdocumentor/phpdocumentor/bin/phpdoc -d ./controller -t ./docs/api for single folder

#for multiple folders
vendor/phpdocumentor/phpdocumentor/bin/phpdoc -d ./controller -d ./model -d ./view -t ./docs/api


#runs all tests in tests dir
